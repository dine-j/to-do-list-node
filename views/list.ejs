<h1>My to-do list</h1>
<form action="/delete/" method="post" onChange="this.submit()">
	<ul>
		<% todolist.forEach(function(task, index) { %>
		<li><input type="checkbox" name="<%= index %>"> <%= task %></li>
		<% }); %>
	</ul>	
</form>


<p>Add a task:</p>
<form action="/add/" method="post">
	<input name="task" type="text"></input>
	<button type="button">Confirm</button>	
</form>
